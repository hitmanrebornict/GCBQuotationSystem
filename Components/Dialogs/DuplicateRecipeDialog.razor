@inject MasterDataServices MasterDataService
@inject DialogService DialogService

<div class="col-md-12">
    <div style="margin-bottom: 1rem" class="row">
        <div class="col-md-3">
            <RadzenLabel Text="Recipe Code" Component="RecipeCode" style="width: 100%">
            </RadzenLabel>
        </div>
        <div class="col-md-9">
            <RadzenTextBox MaxLength="100" style="width: 100%" @bind-Value="duplicateRecipe.RecipeCode" Name="ParameterName" Placeholder="Please enter recipe code..." />
        </div>
    </div>
    <div style="margin-bottom: 1rem" class="row">
        <div class="col-md-3">
            <RadzenLabel Text="Recipe Desc" Component="Recipe Description" style="width: 100%">
            </RadzenLabel>
        </div>
        <div class="col-md-9">
            <RadzenTextBox MaxLength="100" style="width: 100%" @bind-Value="duplicateRecipe.RecipeDesc" Name="ParameterName" Placeholder="Please enter recipe desc..." />
        </div>
    </div>
    <div style="margin-bottom: 1rem" class="row">
        <div class="col-md-3">
            <RadzenLabel Text="Product type" Component="Product Type" style="width: 100%">
            </RadzenLabel>
        </div>
        <div class="col-md-9">
            <RadzenDropDown Data="@ProductTypeList" @bind-Value="@productTypeId" TextProperty="TypeName" ValueProperty="ProductTypeId"></RadzenDropDown>
        </div>
    </div>

    @foreach(var rm in RawMaterialViewModelsList){
        <div style="margin-bottom: 1rem" class="row">
            <div class="col-md-3">
                <RadzenLabel Text="@rm.RawMaterialItem.MaterialName" Component="Product Type" style="width: 100%">
                </RadzenLabel>
            </div>
            <div class="col-md-9">
                <RadzenNumeric TValue="Decimal" @bind-Value=@rm.Amount style="width: 100%" Change="@(async(value) => await TotalCostOnChange(value))"></RadzenNumeric>
            </div>
        </div>
    }
</div>

<div class="row">
    <div class="col offset-sm-3">
        <RadzenButton ButtonType="Radzen.ButtonType.Submit" Icon="save" Text="Save" ButtonStyle="ButtonStyle.Primary" Click="@(() => buttonSubmitOnClick(duplicateRecipe,RawMaterialViewModelsList))" />
        <RadzenButton ButtonStyle="ButtonStyle.Light" style="margin-left: 1rem" Text="Cancel" Click="@buttonCancelOnClick" />
    </div>
</div>


@code {
    private List<ProductType> ProductTypeList = new List<ProductType>();

    public List<RawMaterialViewModel> RawMaterialViewModelsList = new List<RawMaterialViewModel>();

    [CascadingParameter]
    private Dialog _dialog { get; set; }

    [Parameter]
    public int RecipeId { get; set; }

    private int productTypeId = 0;
    private decimal ratio = 0;
    private Recipe duplicateRecipe = new Recipe();
    private Recipe originalRecipe = new Recipe();

    public class RawMaterialViewModel(){
        public RawMaterial RawMaterialItem { get; set; }
        public Decimal Amount = 0;
    }

    protected override async Task OnInitializedAsync()
    {
        ProductTypeList = await MasterDataService.GetProductTypesAsync();

        // Load the original recipe with ingredients
        originalRecipe = await MasterDataService.GetRecipeWithIngredientsAsync(RecipeId);
        
        if (originalRecipe != null)
        {
            // Pre-populate the duplicate recipe with original data
            duplicateRecipe.RecipeCode = $"{originalRecipe.RecipeCode}_COPY";
            duplicateRecipe.RecipeDesc = $"{originalRecipe.RecipeDesc} (Copy)";
            productTypeId = originalRecipe.ProductTypeId ?? 1;
        }

        // Load all raw materials and populate with original recipe amounts
        var allRawMaterials = await MasterDataService.GetAllRawMaterialsAsync();
        RawMaterialViewModelsList = allRawMaterials.Select(r => new RawMaterialViewModel
        {
            RawMaterialItem = r,
            Amount = originalRecipe?.RecipeIngredients?.FirstOrDefault(ri => ri.MaterialId == r.MaterialId)?.Amount ?? 0
        }).ToList();

        SetTitleContent();
        DialogService.Refresh();
    }

    private async void buttonSubmitOnClick(Recipe duplicateRecipe, List<RawMaterialViewModel> RawMaterialViewModelsList){
        if(duplicateRecipe.RecipeCode == null || duplicateRecipe.RecipeDesc == null || productTypeId == 0 ){

            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Error,
                Summary = "Error",
                Detail = "Please enter all field.",
                Duration = 4000
            });

            return;
        }
        else if (RawMaterialViewModelsList.Sum(x => x.Amount) != 100)
        {
                NotificationService.Notify(new NotificationMessage
                    {
                        Severity = NotificationSeverity.Error,
                        Summary = "Error",
                        Detail = "The ratio must be 100%.",
                        Duration = 4000
                    });
            return;
        }
        else{
            // Clear any existing ingredients
            duplicateRecipe.RecipeIngredients.Clear();
            
            foreach(var rm in RawMaterialViewModelsList){
                if(rm.Amount != 0){
                    duplicateRecipe.RecipeIngredients.Add(new RecipeIngredient
                    {
                        MaterialId = rm.RawMaterialItem.MaterialId,
                        Amount = rm.Amount
                    });
                }
            }

            await MasterDataService.addNewRecipeAsync(duplicateRecipe, productTypeId, 10);

                NotificationService.Notify(new NotificationMessage
                    {
                        Severity = NotificationSeverity.Success,
                        Summary = "Success",
                        Detail = "The recipe has been duplicated successfully.",
                        Duration = 4000
                    });
        }
    }

    public void buttonCancelOnClick()
    {
        DialogService.Close();
    }

    private async Task TotalCostOnChange(decimal value)
    {
        ratio = 0;

        foreach(var en in RawMaterialViewModelsList){
            ratio += en.Amount;
        }
       

        DialogService.Refresh();
        await InvokeAsync(StateHasChanged);
    }

    void SetTitleContent()
    {
        _dialog.Title = null; // clear default title
        _dialog.Options.TitleContent = service =>
    @<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Start" Gap="10px">
        <h5>Total ratio: <b>@ratio</b></h5>
     
    </RadzenStack>;

    }
}
