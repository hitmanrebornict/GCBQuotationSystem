<div class="row">
    <div class="col offset-sm-3">
        <RadzenButton ButtonType="Radzen.ButtonType.Submit" Icon="save" Text="Save" ButtonStyle="ButtonStyle.Primary" Click="@(() => ButtonSubmitOnClick(recipe, RawMaterialViewModelsList))" />
        <RadzenButton ButtonStyle="ButtonStyle.Light" style="margin-left: 1rem" Text="Cancel" Click="@ButtonCancelOnClick" />
    </div>
</div>

@code {
    [Parameter]
    public int RecipeId { get; set; }

    private List<ProductType> ProductTypeList = new List<ProductType>();
    private List<PackagingMaterial> PackagingMaterialList = new List<PackagingMaterial>();
    public List<RawMaterialViewModel> RawMaterialViewModelsList = new List<RawMaterialViewModel>();

    [CascadingParameter]
    private Dialog _dialog { get; set; }

    private decimal ratio = 0;
    private Recipe recipe = new Recipe();

    public class RawMaterialViewModel
    {
        public RawMaterial RawMaterialItem { get; set; }
        public Decimal Amount { get; set; } = 0;
    }

    protected override async Task OnInitializedAsync()
    {
        // Load the recipe to edit
        recipe = await MasterDataService.GetRecipeByIdAsync(RecipeId);
        
        // Load dropdown data
        ProductTypeList = await MasterDataService.GetProductTypesAsync();
        PackagingMaterialList = await MasterDataService.GetPackagingMaterial();

        // Load all raw materials
        var allRawMaterials = await MasterDataService.GetAllRawMaterialsAsync();
        
        // Debug: Log existing recipe ingredients
        Console.WriteLine($"Recipe {recipe.RecipeId} has {recipe.RecipeIngredients.Count} ingredients:");
        foreach(var ingredient in recipe.RecipeIngredients)
        {
            Console.WriteLine($"  - MaterialId: {ingredient.MaterialId}, MaterialName: {ingredient.Material.MaterialName}, Amount: {ingredient.Amount}");
        }
        
        // Create view models for each raw material
        RawMaterialViewModelsList = allRawMaterials.Select(r => {
            var existingAmount = recipe.RecipeIngredients
                .Where(ri => ri.MaterialId == r.MaterialId)
                .Select(ri => ri.Amount)
                .FirstOrDefault();
            
            // Debug: Log material mapping
            if (existingAmount > 0)
            {
                Console.WriteLine($"Mapping MaterialId {r.MaterialId} ({r.MaterialName}) with amount {existingAmount}");
            }
            
            return new RawMaterialViewModel
            {
                RawMaterialItem = r,
                Amount = existingAmount
            };
        }).ToList();

        // Calculate initial ratio
        CalculateRatio();
        
        SetTitleContent();
        DialogService.Refresh();
    }

    private void CalculateRatio()
    {
        ratio = RawMaterialViewModelsList.Sum(x => x.Amount);
    }

    private async void ButtonSubmitOnClick(Recipe recipe, List<RawMaterialViewModel> rawMaterialViewModels)
    {
        if(recipe.RecipeCode == null || recipe.RecipeDesc == null)
        {
            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Error,
                Summary = "Error",
                Detail = "Please fill in all required fields.",
                Duration = 4000
            });
            return;
        }
        else if (rawMaterialViewModels.Sum(x => x.Amount) != 100)
        {
            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Error,
                Summary = "Error",
                Detail = "The ratio must be 100%.",
                Duration = 4000
            });
            return;
        }
        else
        {
            // Debug: Log what we're about to update
            Console.WriteLine("=== UPDATING RECIPE INGREDIENTS ===");
            Console.WriteLine($"Recipe ID: {recipe.RecipeId}");
            Console.WriteLine("Current ingredients before update:");
            foreach(var ingredient in recipe.RecipeIngredients)
            {
                Console.WriteLine($"  - MaterialId: {ingredient.MaterialId}, MaterialName: {ingredient.Material.MaterialName}, Amount: {ingredient.Amount}");
            }
            
            Console.WriteLine("View model data:");
            foreach(var rm in rawMaterialViewModels.Where(rm => rm.Amount > 0))
            {
                Console.WriteLine($"  - MaterialId: {rm.RawMaterialItem.MaterialId}, MaterialName: {rm.RawMaterialItem.MaterialName}, Amount: {rm.Amount}");
            }
            
            // Clear all existing ingredients first to avoid duplicates
            var ingredientsToRemove = recipe.RecipeIngredients.ToList();
            foreach(var ingredientToRemove in ingredientsToRemove)
            {
                Console.WriteLine($"Removing existing ingredient: MaterialId {ingredientToRemove.MaterialId} ({ingredientToRemove.Material.MaterialName})");
                recipe.RecipeIngredients.Remove(ingredientToRemove);
            }
            
            // Add all ingredients with non-zero amounts
            foreach(var rm in rawMaterialViewModels)
            {
                if(rm.Amount > 0)
                {
                    Console.WriteLine($"Adding ingredient: MaterialId {rm.RawMaterialItem.MaterialId} ({rm.RawMaterialItem.MaterialName}) with amount {rm.Amount}");
                    recipe.RecipeIngredients.Add(new RecipeIngredient
                    {
                        RecipeId = recipe.RecipeId,
                        MaterialId = rm.RawMaterialItem.MaterialId,
                        Amount = rm.Amount
                    });
                }
            }

            Console.WriteLine("Final ingredients after update:");
            foreach(var ingredient in recipe.RecipeIngredients)
            {
                Console.WriteLine($"  - MaterialId: {ingredient.MaterialId}, MaterialName: {ingredient.Material.MaterialName}, Amount: {ingredient.Amount}");
            }
            Console.WriteLine("=== END UPDATE ===");

            await MasterDataService.UpdateRecipeAsync(recipe);

            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Success,
                Summary = "Success",
                Detail = "The recipe has been updated.",
                Duration = 4000
            });
            
            DialogService.Close(true);
        }
    }

    public void ButtonCancelOnClick()
    {
        DialogService.Close();
    }

    private async Task TotalCostOnChange(decimal value)
    {
        CalculateRatio();
        DialogService.Refresh();
        await InvokeAsync(StateHasChanged);
    }

    void SetTitleContent()
    {
        _dialog.Title = null; // clear default title
        _dialog.Options.TitleContent = service =>
        @<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Start" Gap="10px">
            <h5>Total ratio: <b>@ratio</b></h5>
        </RadzenStack>;
    }
} 